<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="android.text.Html" />
        <import type="com.magestore.app.util.ConfigUtil" />
        <variable
            name="cartItem"
            type="com.magestore.app.lib.model.checkout.cart.CartItem" />
        <variable
            name="panel"
            type="com.magestore.app.pos.panel.ProductOptionPanel" />
        <variable
            name="controller"
            type="com.magestore.app.pos.controller.CartItemListController" />
        <variable
            name="product"
            type="com.magestore.app.lib.model.catalog.Product" />
    </data>

    <LinearLayout android:focusableInTouchMode="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/id_img_product_detail_image"
                android:layout_width="@dimen/product_image_detail_height"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="@dimen/product_image_detail_height"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:text="@{Html.fromHtml(product.getDescription()).toString()}" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/product_image_detail_height"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.33">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/price" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.33">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/sku" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.33">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/quantity" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.33"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@{ConfigUtil.formatPrice(cartItem.getUnitPrice())}"
                            android:textAlignment="viewEnd" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.33"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@{product.getSKU()}"
                            android:textAlignment="viewEnd" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.33"
                        android:orientation="horizontal">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:onClick="@{panel.onAddQuantity}"
                            android:text="+" />

                        <EditText
                            android:id="@+id/id_txt_product_option_quantity"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1.0"
                            android:text="@{ConfigUtil.formatQuantity(cartItem.getQuantity())}"
                            android:textAlignment="viewEnd" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:onClick="@{panel.onSubstractQuantity}"
                            android:text="-" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1.0">

                <ProgressBar
                    android:id="@+id/id_product_option_progress"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/layout_margin"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/id_product_option_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/layout_margin"
                    android:visibility="gone" />

                <ExpandableListView
                    android:id="@+id/id_product_option_list"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:divider="@android:color/darker_gray"
                    android:dividerHeight="0.5dp"
                    android:indicatorLeft="?android:attr/expandableListPreferredItemIndicatorRight" />
            </RelativeLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/add_to_cart"
                android:onClick="@{panel.onAddToCart}"/>
        </LinearLayout>
    </LinearLayout>
</layout>
