<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="@dimen/layout_margin_250"
        android:layout_height="@dimen/layout_margin_50"
        android:layout_marginRight="@dimen/layout_margin_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_category"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/layout_margin_20"
            android:text="All Product"
            android:textColor="#333"
            android:textSize="17sp" />


        <ImageView
            android:id="@+id/icon_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_expand_more_white" />

    </LinearLayout>


</LinearLayout>