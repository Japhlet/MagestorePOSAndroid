<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/menu_left_header_background"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <TextView
        android:id="@+id/staff_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="Magestore"
        android:textSize="@dimen/text_size_18"
        android:textColor="@color/menu_left_title_text_color" />

    <TextView
        android:id="@+id/staff_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sales@trueplus.vn"
        android:textSize="@dimen/text_size"
        android:textColor="@color/menu_left_text_color" />

</LinearLayout>
